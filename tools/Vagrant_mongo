Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"
  #config.vm.network "public_network", auto_config: true
  config.vm.network "forwarded_port", guest: 27017, host: 27017

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = ENV["DEV_DIR"] + "jiss-provision/playbooks/init.yml"
  end

  config.vm.provision "ansible" do |ansible|
    ansible.verbose = "vv"
    ansible.playbook = ENV["DEV_DIR"] + "jiss-provision/playbooks/mongodb/install.yml"
  end

  config.vm.provision "shell" do |shell|
    shell.inline = "ufw allow 27017"
  end

  config.vm.provision "shell" do |shell|
    shell.inline = "cd /vagrant && mongorestore"
  end

  config.vm.provision "shell", run: "always" do |shell|
    shell.inline = "ifconfig"
  end
end
